<div ng-controller="PrintController">

    <div ng-if="isShow">
        <p>请先选择需要答应的运单</p>
    </div>
    <div ng-if="!isShow">
        <div ng-repeat="freight in freightList">
            <div class="a4-print-page-half">
                    <div class="row btm-buffer-2">
                        <div class="col-xs-6">
                            <h3> 运单号：<label ng-bind="freight.id"></label></h3>
                        </div>
                        <div class="col-xs-5 col-xs-offset-1">
                            <div barcode-api="freight.id" id="freight.id"></div>
                        </div>
                    </div>
                    <table class="table table-bordered">
                        <thead>
                        <th width="50%">寄件人信息</th>
                        <th>收件人信息</th>
                        </thead>
                        <tr>
                            <td>姓名：<span ng-bind="freight.user.realName"></span></td>
                            <td>姓名：<span ng-bind="freight.recipient"></span></td>
                        </tr>
                        <tr>
                            <td>Email:<span ng-bind="freight.user.username"></span></td>
                            <td>地址：<span ng-bind="freight.address"></span></td>
                        </tr>
                        <tr>
                            <td>电话：<span ng-bind="freight.user.contactNumber"></span></td>
                            <td>电话：<span ng-bind="freight.recipientPhone"></span></td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <strong>附加要求 --  </strong>
                                加固:  <input type="checkbox" ng-model="freight.checkModel.isExtraPackaging" disabled> |
                                减重:  <input type="checkbox" ng-model="freight.checkModel.isReduceWeight" disabled> |
                                普通分包:  <input type="checkbox" ng-model="freight.checkModel.isSplit" disabled> |
                                精确分包:  <input type="checkbox" ng-model="freight.checkModel.isSplitCharge" disabled> |
                                直接派送:  <input type="checkbox" ng-model="freight.checkModel.isDelivery" disabled>

                            </td>
                        </tr>
                        <div ng-show="freight.isSplitPremium">
                        <tr>
                            <td colspan="2">
                                备注: <span ng-bind="freight.comments"></span>
                            </td>
                        </tr>
                        </div>
                    </table>
            </div>
        </div>
    </div>
</div>
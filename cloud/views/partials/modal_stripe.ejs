<div class="modal-body">
    <form stripe:form="stripeCallback">
        <div class="form-group">
            <label for="amount" ng-bind="USD"></label>
        </div>
        <div class="form-group">
            <label for="number"></label>
            <input type="text" ng-model="number" placeholder="Card Number" data-stripe="number"/>
        </div>
        <div class="form-group">
            <label for="amount"></label>
            <input type="text" ng-model="cvc" placeholder="CVC" data-stripe="cvc"/>
        </div>
        <div class="form-group">
            <label for="amount"></label>
            <input type="text" ng-model="expiryMonth" placeholder="Expiration Month" data-stripe="exp-month"/>
        </div>
        <div class="form-group">
            <label for="amount"></label>
            <input type="text" ng-model="expiryYear" placeholder="Expiration Year" data-stripe="exp-year"/>
        </div>
    </form>
    <div ng-if="form.card.$invalid">
        Error: invalid card number!
    </div>
    <div ng-if="form.expiry.$invalid">
        Error: invalid expiration date!
    </div>
    <div ng-if="form.cvc.$invalid">
        Error: invalid CVC!
    </div>

</div>
<div class="modal-footer">
    <button type="submit">提交</button>
</div>


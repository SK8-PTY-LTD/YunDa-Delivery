<div class="modal-body">
    <progressbar class="progress-striped active" value="100" type="success" ng-show="isLoading"><span ng-bind="promote"></span></progressbar>

    <form name="addressForm">
        <strong class="text-danger">更改登录邮箱后需要重新验证账号</strong>
        <div class="form-group">
            <label for="newPassword">当前登录邮箱</label></br>
            <input type="email" id="email" ng-model="currentUser.username" disabled/></br>
        </div>
        <div class="form-group">
            <label for="newPassword">新登录邮箱</label></br>
            <input type="email" id="email" ng-model="newUsername"/></br>
        </div>
    </form>

</div>
<div class="modal-footer">
    <button type="submit" ng-click="saveUsername()">保存</button>
    <button ng-click="close()">取消</button>
</div>


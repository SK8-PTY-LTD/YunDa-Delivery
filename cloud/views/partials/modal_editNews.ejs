<div class="modal-body">
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label>标题: </label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" type="text" ng-model="news.title">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label>链接: </label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" type="text" ng-model="news.link">
                </div>
            </div>
        </div>
</div>

<div class="modal-footer">
    <div class="pull-right">
        <button class="btn btn-default" ng-click="save()">保存</button>
        <button class="btn btn-default" ng-click="cancel()">取消</button>
    </div>
</div>